{% if type !== "kubernetes.io/service-account-token" and 
  type !== "helm.sh/release.v1" -%}
apiVersion: v1
kind: Secret
metadata:
  name: {{ metadata.name }}
  namespace: {{ metadata.namespace }}
type: {{ type }}
{%- if data %}
(length(data) > `0`): true
{%- elif stringData %} 
(length(stringData) > `0`): true
{%- endif %}
---
{% endif %}